SELECT
	d.PLATFORM_NAME,
	d.DATABASE_ROLE,
	d.DBID,
	d.NAME,
	d.CREATED,
	d.LOG_MODE,
	d.OPEN_MODE,
	d.FLASHBACK_ON
FROM
	v$database d;

result:
PLATFORM_NAME			DATABASE_ROLE	DBID		NAME	CREATED			LOG_MODE	OPEN_MODE	FLASHBACK_ON
